<!--								</artifactItems>-->
<!--							</configuration>-->
<!--						</execution>-->
<!--					</executions>-->
<!--				</plugin>-->
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.7</version>
				<configuration>
					<generateReports>false</generateReports>
				</configuration>
			</plugin>

			<!-- To generate standalone javadocs for the project, add the Javadoc 
				Plugin -->
			<!-- in the build section of pom -->
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<aggrgate>true</aggrgate>
					<doclet>org.umlgraph.doclet.UmlGraphDoc</doclet>
					<docletPath>PATH_TO_UMLGRAPH</docletPath>
					<author>false</author>
					<quiet>false</quiet>
					<failOnError>false</failOnError>
					<tags>
						<tag>
							<name>opt</name>
							<placement>X</placement>
						</tag>
						<tag>
							<name>hidden</name>
							<placement>X</placement>
						</tag>
					</tags>

					<additionalparam>
						-Xdoclint:none -views -all -inferrel -inferdep
						-quiet
						-collpackages java.util.* -qualify
						-postfixpackage
						-nodefontsize 9 -nodefontpackagesize 7
					</additionalparam>
					<useStandardDocletOptions>true</useStandardDocletOptions>
				</configuration>
			</plugin>

		</plugins>
		<extensions>
			<!-- Enabling the use of SSH -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh</artifactId>
				<version>3.0.0</version>
			</extension>
		</extensions>
	</build>



	<distributionManagement>
		<site>
			<id>plugin project website</id>
			<url>scp://${remote.user}@${p2.site.host}:/${p2.site.root}/${p2.site.path}</url>
		</site>
	</distributionManagement>


	<!-- two profiles: cloud and kv. both use common module -->
	<profiles>
		<profile>
			<id>cloud</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>oracle.nosql.model.common</module>
				<module>oracle.nosql.model.cloud</module>
			</modules>
		</profile>

		<profile>
			<id>kv</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>

			<modules>
				<module>oracle.nosql.model.common</module>
				<module>oracle.nosql.model.kv</module>
			</modules>
		</profile>
	</profiles>


	<organization>
		<name>Oracle Corp.</name>
	</organization>
</project>
