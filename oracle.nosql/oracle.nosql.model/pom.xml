<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>oracle.nosql</groupId>
	<artifactId>oracle.nosql.model</artifactId>
	<version>1.2.0</version>
	<packaging>pom</packaging>
	<name>Oracle NoSQL datamodel parent</name>
	<url>oracle.nosql.model/</url>
	<description>a pom-only project.
	Builds database layer for a specific profile.
	Two profiles are configured: cloud and kv.
	</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<!-- these custom properties can be specified via command-line -->
		<remote.user>${user.name}</remote.user>
		<p2.site.host>HOST_PATH</p2.site.host>
		<p2.site.port>8000</p2.site.port>
		<p2.site.root>home/${remote.user}/www</p2.site.root>
		<p2.site.path>eclipse</p2.site.path>
	</properties>

	<!-- common dependencies used by modules -->
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.7.0</version>
					<configuration>
						<rules>
							<requireJavaVersion>
								<version>1.8</version>
							</requireJavaVersion>
						</rules>
						<source>1.8</source>
						<target>1.8</target>
						<!-- oddly, this flag activates incremental compilation -->
						<useIncrementalCompilation>false</useIncrementalCompilation>
					</configuration>
				</plugin>

				<!-- the target jar is copied to oracle.nosql.eclipse.plugin/ -->
				<!-- src/main/resources/lib directory. this target jar is statically -->
				<!-- linked to oracle.nosql.eclipse.plugin via its MANTFEST.MF -->

